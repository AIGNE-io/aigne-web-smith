{
  "name": "web-smith-components",
  "version": "1.0.0",
  "description": "A professional component studio project, with a simple `HelloWorld` component example, and engineered project structure",
  "private": true,
  "engines": {
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "blocklet component dev",
    "start": "blocklet component dev",
    "lint": "biome check ./src && tsc --noEmit",
    "lint:skip": "echo 'skip lint'",
    "lint:fix": "biome check --apply ./src",
    "format": "biome format --write ./src",
    "prepare": "npx -y simple-git-hooks",
    "update:deps": "blocklet component update",
    "update": "blocklet component update",
    "bundle": "blocklet component build --bundle-resource-blocklet",
    "bump-version": "blocklet component bump-version"
  },
  "lint-staged": {
    "*.{mjs,js,jsx,ts,tsx,css,less,scss,json,graphql}": [
      "pnpm run format",
      "pnpm run lint:skip"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@blocklet/pages-kit": "^0.6.72",
    "@mui/material": "^7.3.2",
    "react-wrap-balancer": "^1.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "bumpp": "^9.9.3",
    "lint-staged": "^15.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.2",
    "zx": "^8.3.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "importSort": {
    ".js, .jsx, .mjs": {
      "parser": "babylon",
      "style": "module"
    },
    ".ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "license": "MIT"
}